<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.collections.*?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ComboBox?>
<?import java.lang.*?>


<?import javafx.scene.layout.VBox?>
<VBox stylesheets="/css/viewExpense.css" fx:controller="edu.carleton.expensetracker.controllers.ViewExpenseController"
      xmlns:fx="http://javafx.com/fxml">

    <HBox  styleClass="nav" >
        <Button text="Day" />
        <Button text="Week" />
        <Button text="Month" />
        <Button text="Year" />
    </HBox>

    <ComboBox fx:id="changeView" layoutX="15.0" layoutY="33.0" prefWidth="100.0" promptText="List View">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="List View" />
                <String fx:value="Pie Chart" />
                <String fx:value="Line Chart" />
            </FXCollections>
        </items>
    </ComboBox>
    <TableView fx:id="tableView" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <columns>
            <TableColumn text="Type" >
            </TableColumn>
            <TableColumn text="Value">
            </TableColumn>
            <TableColumn text="Category">
            </TableColumn>
            <TableColumn text="Date">
            </TableColumn>
            <TableColumn text="Note">
            </TableColumn>
        </columns>
    </TableView>
    <Button text="Create a new Record"  onAction="#onClickCreateNewRecord"/>
</VBox>

